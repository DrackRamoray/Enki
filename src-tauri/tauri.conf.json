{
    "build": {
        "beforeDevCommand": "trunk serve",
        "beforeBuildCommand": "trunk build",
        "devPath": "http://localhost:1420",
        "distDir": "../src-ui/dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "enki",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "clipboard": {
                "all": true
            },
            "fs": {
                "all": true
            },
            "dialog":{
                "all": true
            },
            "path": {
                "all": true
            },
            "protocol": {
                "all": false,
                "asset": true,
                "assetScope": ["/**/*"]
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.github.drackramoray.enki",
            "targets": "all"
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "hiddenTitle": true,
                "fullscreen": false,
                "resizable": true,
                "title": "enki",
                "width": 1080,
                "minWidth": 360,
                "height": 720,
                "minHeight": 200
            }
        ]
    }
}
